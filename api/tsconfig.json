{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "./",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts"]
}
